root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100
indent_size = 4

[**.md]
trim_trailing_whitespace = false

[**.html]
indent_style = tab

# Tab indentation (no size specified)
[{Makefile,Makefile.scanner,Makefile.iperimeter}]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

# Do not reformat minified JS and CSS files.
[**.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

